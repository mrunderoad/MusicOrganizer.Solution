@{
  Layout = "_Layout";
}


<div class="container">
   @using Music.Models;

  <h1>Check out your records!</h1>

  @if (@Model.Count == 0)
  {
    <h3>You have no records yet, expand your collection!</h3>
  }

  @foreach (Collection collection in Model)
  {
    <h3><a href='/collections/@collection.Id'>@collection.Name</a></h3>
  }
</div>
    