@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    <div class="conatiner">
      @using Music.Models;

      <h3>Artist(s) on this Record</h3>

      <ol>
      @foreach (Artist artist in @Model["artists"])
      {
        <li><a href='/collections/@Model["collection"].Id/artists/@artist.Id'>@artist.ArtistName</a></li>
      }
      </ol>

      <a href='/collections/@Model["collection"].Id/artists/new'><button class="btn-success">Add a new Artist</button></a>
      <a href='/collections'><button class="btn-primary">Return to Record List</button></a>
    </div>
  </body>
</html>    